<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoMobile.Cursos"
             BackgroundColor="Black">
    <Grid Margin="30" >
       
        <VerticalStackLayout Padding="0" >
            
            <Label x:Name="lblCursos" Text="Cursos" TextColor="White" FontSize="40" HorizontalTextAlignment="Center" />
            
        </VerticalStackLayout>

        <HorizontalStackLayout Spacing="10">

            <Button x:Name="btnMenuVoltar" Text="Menu" WidthRequest="200" FontSize="20"
                HorizontalOptions="Center" VerticalOptions="End" Clicked="OnVoltarMenu"/>
            
            <Button x:Name="btnCursosAdd" Text="+" WidthRequest="50" FontSize="20"
                HorizontalOptions="End" VerticalOptions="End" Clicked="OnAdicionarCurso"/>

        
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
