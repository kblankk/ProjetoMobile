<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoMobile.Periodos"
             Background="Black">
    <Grid Margin="30">
        <VerticalStackLayout Padding="0" Spacing="20">

            <Label x:Name="lblPeriodos" Text="Periodos" TextColor="White" FontSize="40" HorizontalTextAlignment="Center" />


            <Frame CornerRadius="10" BorderColor="Gray" BackgroundColor="White" Padding="5">
                <Grid VerticalOptions="Center">

                    <Label Text="..." TextColor="Gray" FontSize="24" VerticalOptions="Center" />



                    <HorizontalStackLayout HorizontalOptions="End">

                        <ImageButton Source="delete_icon.png" WidthRequest="24" HeightRequest="24" VerticalOptions="Center" HorizontalOptions="End" Clicked="btnApagarPeriodo" />
                        <ImageButton Source="edit_icon.png" WidthRequest="24" HeightRequest="24" VerticalOptions="Center" HorizontalOptions="End" Clicked="OnEditarPeriodo"  />

                    </HorizontalStackLayout>

                </Grid>
            </Frame>


            <Frame  CornerRadius="10" BackgroundColor="White" Padding="5" >
                <Grid VerticalOptions="Center">

                    <Label Text="..." TextColor="Gray" FontSize="24" VerticalOptions="Center" />


                    <HorizontalStackLayout HorizontalOptions="End">

                        <ImageButton Source="delete_icon.png" WidthRequest="24" HeightRequest="24" VerticalOptions="Center" HorizontalOptions="End" Clicked="btnApagarPeriodo"/>
                        <ImageButton Source="edit_icon.png" WidthRequest="24" HeightRequest="24" VerticalOptions="Center" HorizontalOptions="End" Clicked="OnEditarPeriodo"/>

                    </HorizontalStackLayout>

                </Grid>
            </Frame>
        </VerticalStackLayout>


        <Button x:Name="btnPeriodosAdd"
                Text="+"
                WidthRequest="50"
                FontSize="20"
                HorizontalOptions="End"
                VerticalOptions="End"
                Clicked="OnAdicionarPeriodo" />
    </Grid>
</ContentPage>

    
    