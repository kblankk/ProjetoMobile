<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoMobile.PeriodosEdit"
             Background="Black">
    <Grid RowSpacing="20" ColumnSpacing="60" Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <Label x:Name="lblPeriodoAdd"  Text="Periodos > Editar" TextColor="White" FontSize="35"  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalTextAlignment="Center"/>



        <Label x:Name="lblcdgPeriodo" Text="CÃ³digo" TextColor="White" Grid.Row="1" Grid.Column="0" FontSize="20"/>
        <Label x:Name="lblsiglaPeriodo" Text="Sigla" TextColor="White" Grid.Row="1" Grid.Column="1" FontSize="20"/>
        <Label x:Name="lblNomePeriodo" Text="Nome" TextColor="White" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" FontSize="20" HorizontalTextAlignment="Center"/>

        <Entry x:Name="etrcdgPeriodo" 
       Grid.Row="2" 
       Grid.Column="0" BackgroundColor="White"
       HorizontalOptions="Fill"
       VerticalOptions="Center"/>

        <Entry x:Name="etrsiglaPeriodo" 
        Grid.Row="2" 
        Grid.Column="2" BackgroundColor="White"
        HorizontalOptions="Fill"
        VerticalOptions="Center"/>

        <Entry x:Name="etrnomePeriodo" 
        Grid.Row="4" 
        Grid.Column="0" Grid.ColumnSpan="2" BackgroundColor="White"
        HorizontalOptions="Fill"
        VerticalOptions="Center"/>

        <Button x:Name="btninserirPeriodo" Text="Salvar" FontSize="30" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"/>
        <Button x:Name="btnVoltarPeriodo" Text="Voltar" FontSize="30" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Clicked="OnVoltarPeriodos"/>

        <Image Source="logo_unianchieta.png" Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" WidthRequest="300"/>


    </Grid>
</ContentPage>